.header {
  margin-top: 2em
  margin-bottom: 1em
  align-items: baseline
  justify-content: space-between

  .blog-title{
    text-align:center;
    border-bottom:3px solid  #C5C1AA;
    padding-bottom:5px;
     .logo {
      color: #AAA;
      font-size: 2.5em;
      font-weight:bold;
      font-family: "Comic Sans MS",cursive,LiSu,sans-serif;
      text-decoration: none;
    }
  }

  .navbar{
    max-width:960px;
    margin:0 auto;
    text-align:center;
    padding-top:5px;
    

    .menu {
      margin: 0;
      padding: 0;

      .menu-item {
        display: inline-block;
        margin: 10px 10px;
      }

      .menu-item-link {
        color: #AAA;
        text-decoration: none;

        &:hover {
          color: #368CCB;
        }
      }
    }
  }
  
}